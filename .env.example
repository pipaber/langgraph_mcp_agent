# OpenAI credentials (required)
OPENAI_API_KEY=

# LangSmith for Studio observability (recommended)
LANGSMITH_API_KEY=
# Enable LangSmith tracing for LangChain/Studio
LANGCHAIN_TRACING_V2=true
# Optional: set a custom project name in LangSmith
# LANGSMITH_PROJECT=agentic-backend

# Docker Compose (Postgres) configuration used by compose.yaml
# Compose will read these for container setup, and your app can use them too.
POSTGRES_USER=agentic_app
POSTGRES_PASSWORD=change_this_password_now
POSTGRES_DB=VectorDB
PG_PORT=5442

# Postgres connection for LangGraph checkpoint + memory store (required)
# Example from docker compose: postgresql+psycopg://agentic_app:change_this_password@localhost:5442/VectorDB
PGVECTOR_CONN=

# Demo-only user id (optional; defaults to 123456 in the console runtime)
DEMO_USER_ID=
